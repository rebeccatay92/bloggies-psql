<h1>All posts by <%= current_user.name %></h1>

<%= @nasa_data.inspect %>

<ul>
  <li>
    <h3><%= @nasa_data["title"] %><h3>
    <h3><%= @nasa_data["date"] %><h3>
    <h3><%= @nasa_data["explanation"] %><h3>
      <%= image_tag @nasa_data["url"] %>
  </li>
</ul>


<ul>
  <% @news_data["articles"].each do |article| %>
    <li>
      <h3><%= article["title"] %></h3>
      <p><%= article["description"] %> </p>
    </li>
  <% end %>
</ul>

<ul>
<% @all_posts.each do |post| %>
  <% if post.id %>
    <li>
      <h3><%= post.title %></h3>
      <p><%= post.content %></p>
      <%= link_to "View this post", post_path(post) %>
      <%= link_to "Delete", post_path(post), method: :delete %>
    </li>
  <% end %>
<% end %>
</ul>

<%= form_for @new_post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br>
  <%= f.hidden_field :user_id %>
  <%= f.submit %>
<% end %>
