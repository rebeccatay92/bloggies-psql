<h1>All posts by <%= current_user.name %></h1>

<ul>
<% @all_posts.each do |post| %>
  <% if post.id %>
    <li>
      <h3><%= post.title %></h3>
      <p><%= post.content %></p>
      <%= link_to "View this post", post_path(post) %>
      <%= link_to "Delete", post_path(post), method: :delete %>
    </li>
  <% end %>
<% end %>
</ul>

<%= form_for @new_post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br>
  <%= f.hidden_field :user_id %>
  <%= f.submit %>
<% end %>
